<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.prime.com.tr/ui"
	template="/templates/game.xhtml">

	<!-- content -->
	<ui:define name="content">
		
		<div style="font-size:85%; width:90%; margin:auto;">
		<h1>#{m['rnk_ranking']}</h1>
		
		<p:messages id="messages" showDetail="false"/>
		
		<div>
			<h:form>
				<p:tabView>
					<p:tab title="#{m['rnk_points']}">
						<p:dataTable var="rank" value="#{rankingManager.getRanking(sessionManager.map)}"  rows="10">
		                		
							<p:column>  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_user']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.username}"/>
					        </p:column>
							
							<p:column sortBy="#{user.points}">  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_points']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.points}"/>
					        </p:column>
						</p:dataTable>
					
					</p:tab>
					<p:tab title="Resources">
						<p:dataTable  var="rank" value="#{rankingManager.getRanking(sessionManager.map)}"  rows="10">
		                		
							<p:column>  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_user']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.username}"/>
					        </p:column>
							
							<p:column sortBy="#{rank.wood}">  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_wood']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.wood}"/>
					        </p:column>
					        
					        <p:column sortBy="#{rank.stone}">  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_stone']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.stone}"/>
					        </p:column>
					        
					        <p:column sortBy="#{rank.iron}">  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_iron']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.iron}"/>
					        </p:column>
					        
					        <p:column sortBy="#{rank.all}">  
					            <f:facet name="header">  
					                <h:outputText value="#{m['rnk_sum']}" />  
					            </f:facet>  
					            <h:outputText value="#{rank.all}"/>
					        </p:column>
						</p:dataTable>

					</p:tab>
	
				</p:tabView>
				
			</h:form>
		</div>
		</div>
	</ui:define>
	
</ui:composition>