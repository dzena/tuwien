package aufgabe4.patrick;

/**
 * Extends the box interface with one method
 * instance represents extended box model, with definable frame and fill char
 * 
 * @author pfb
 *
 */
public abstract class AbstractExtendedBox extends AbstractSimpleBox {
	
	protected char flc;
	
	public AbstractExtendedBox(int width, int height, char fc, char flc) {
		super(width, height, fc);
		this.setFillChar(flc);
	}
	
	/**
	 * will set the char for the inner-box/the filling of the box.
	 * 
	 * @param flc
	 */
	public void setFillChar(char flc) {
		this.flc = flc;
	}
}
